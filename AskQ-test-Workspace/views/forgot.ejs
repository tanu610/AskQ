<!DOCTYPE html>
<html lang="en">
<head>
  <title>Login</title>
  <link rel="stylesheet" type="text/css" href="css/forgot.css">
  <link href="/bootstrap-4.3.1-dist/css/bootstrap.css" rel="stylesheet" />
  <link href="/bootstrap-4.3.1-dist/css/bootstrap-theme.css" rel="stylesheet" />
</head>
<body>


<!--warnings -->
  <% if(success && success.length>0) {%>
  <div class="container mt-2">
    <div class="alert alert-success" role="alert">
       <%=success%>
    </div>
  </div>
  <%}%>
  <% if(error && error.length>0) {%>
  <div class="container">
    <div class="alert alert-danger" role="alert">
       <%=error%>
    </div>
  </div>
  <%}%>


<div class="row mt-5">

  <div class="container">
	<div class="col-md-6  m-auto">
  <div class="card card-body text-center">
		<form action="/forgot" method="POST">
			<legend>Forgot Password</legend>
			<div class="form-group">
				<label for="email">Email</label>
				<input type="email" name="email" class="form-control" placeholder="Email">
			</div>
			<div class="form-group">
				<input type="submit" class="btn btn-sm" value="Reset Password">
			</div>
      <a class="forgot" href="/login" role="link">login!</a>
		</form>
    </div>
	</div>
</div>
</div>

<script src="/bootstrap-4.3.1-dist/css/bootstrap.css" rel="stylesheet"></script>
<script src="https://cdnjs.cloudflare.com/ajax/libs/popper.js/1.14.7/umd/popper.min.js" integrity="sha384-UO2eT0CpHqdSJQ6hJty5KVphtPhzWj9WO1clHTMGa3JDZwrnQq4sF86dIHNDz0W1" crossorigin="anonymous"></script>
<script src="https://stackpath.bootstrapcdn.com/bootstrap/4.3.1/js/bootstrap.min.js" integrity="sha384-JjSmVgyd0p3pXB1rRibZUAYoIIy6OrQ6VrjIEaFf/nJGzIxFDsf4x0xIM+B07jRM" crossorigin="anonymous"></script>
</body>
</html>